{
  "name": "@dfinity/gix-components",
  "version": "2.5.0",
  "scripts": {
    "dev": "npm run i18n && vite dev",
    "build": "npm run i18n && vite build",
    "package": "svelte-kit sync && svelte-package",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint .",
    "format": "prettier --write --plugin-search-dir=. .",
    "test": "TZ=UTC jest",
    "download:samples": "./scripts/download-samples.sh",
    "e2e": "npm run download:samples && playwright test --reporter=html",
    "i18n": "node scripts/i18n.types.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@playwright/test": "^1.31.2",
    "@sveltejs/adapter-static": "^2.0.1",
    "@sveltejs/kit": "^1.9.3",
    "@sveltejs/package": "^2.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.2",
    "@types/dompurify": "^2.4.0",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "mdsvex": "^0.10.6",
    "node-fetch": "^3.3.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-svelte": "^2.9.0",
    "sass": "^1.58.3",
    "svelte-check": "^3.0.4",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^5.0.1",
    "svelte2tsx": "^0.6.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5",
    "vite": "^4.1.4"
  },
  "dependencies": {
    "dompurify": "^3.0.1",
    "html5-qrcode": "^2.3.7",
    "qr-creator": "^1.0.0"
  },
  "keywords": [
    "ui",
    "ux",
    "designsystem",
    "uikit",
    "sveltekit",
    "svelte"
  ],
  "peerDependencies": {
    "svelte": "^3.55.1"
  }
}
