{
  "name": "@dfinity/gix-components",
  "version": "2.6.0",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "npm run i18n && vite dev",
    "build": "npm run i18n && vite build",
    "package": "svelte-kit sync && svelte-package",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint .",
    "format": "prettier --write --plugin-search-dir=. .",
    "test": "TZ=UTC jest",
    "download:samples": "./scripts/download-samples.sh",
    "i18n": "node scripts/i18n.types.mjs",
    "e2e": "npm run download:samples && playwright test",
    "e2e:ci": "npm run download:samples && playwright test --reporter=html",
    "e2e:snapshots": "npm run download:samples && npx playwright test --update-snapshots --reporter=list",
    "e2e:report": "npx playwright show-report"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@playwright/test": "^1.32.2",
    "@sveltejs/adapter-static": "^2.0.1",
    "@sveltejs/kit": "^1.15.2",
    "@sveltejs/package": "^2.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.2",
    "@types/dompurify": "^3.0.1",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "mdsvex": "^0.10.6",
    "node-fetch": "^3.3.1",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-svelte": "^2.10.0",
    "sass": "^1.61.0",
    "svelte-check": "^3.2.0",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^5.0.3",
    "svelte2tsx": "^0.6.11",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "vite": "^4.2.1"
  },
  "dependencies": {
    "dompurify": "^3.0.1",
    "html5-qrcode": "^2.3.7",
    "qr-creator": "^1.0.0"
  },
  "keywords": [
    "ui",
    "ux",
    "designsystem",
    "uikit",
    "sveltekit",
    "svelte"
  ],
  "peerDependencies": {
    "@dfinity/utils": "0.*",
    "svelte": "^3.55.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dfinity/gix-components.git"
  },
  "bugs": {
    "url": "https://github.com/dfinity/gix-components"
  }
}
