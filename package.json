    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^5.0.0",
    "svelte2tsx": "^0.6.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
