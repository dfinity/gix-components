    "sass": "^1.56.1",
    "svelte": "^3.53.1",
    "svelte-check": "^2.9.2",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^4.10.7",
    "svelte2tsx": "^0.5.20",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3",
    "vite": "^3.2.4"
  },
  "type": "module",
  "dependencies": {
    "dompurify": "^2.4.1"
  },
  "keywords": [
    "ui",
    "ux",
    "designsystem",
    "uikit",
    "sveltekit",
    "svelte"
