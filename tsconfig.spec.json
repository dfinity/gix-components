{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "paths": {
      "$docs": ["./src/docs"],
      "$docs/*": ["./src/docs/*"],
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"]
    }
  },
  "exclude": [],
  "include": [
    "ambient.d.ts",
    "./types/**/$types.d.ts",
    "./vite.config.ts",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.svelte",
    "./tests/**/*.js",
    "./tests/**/*.ts",
    "./tests/**/*.svelte",
    "./vitest.config.ts",
    "./vitest.setup.ts"
  ]
}
